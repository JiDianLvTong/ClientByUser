<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_1b1b1b"
    android:orientation="vertical">

    <com.android.jidian.repair.widgets.immersionStatusBar.StatusBarView
        android:id="@+id/statusBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.android.jidian.repair.widgets.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="0.5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white_66ffffff" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tab_layout_main_page"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_33ffffff"
        app:tl_iconGravity="TOP"
        app:tl_iconHeight="20dp"
        app:tl_iconWidth="20dp"
        app:tl_indicator_height="0dp"
        app:tl_textSelectColor="@color/yellow_D7A64A"
        app:tl_textsize="9sp" />

</LinearLayout>