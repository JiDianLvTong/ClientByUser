<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_1b1b1b"
    android:orientation="vertical">

    <com.android.jidian.repair.widgets.immersionStatusBar.StatusBarView
        android:id="@+id/statusBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/pageReturn"
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/pub_page_left_arrow_white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="任务详情"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_task_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_ffffff_corner_top_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:padding="15dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_task_item_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/tv_task_item_guide"
                    android:src="@drawable/main_map"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:visibility="gone"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_task_item_type"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_d7a64a_corner_top_right_10"
                android:gravity="center"
                android:textColor="@color/color_FFFFFF"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f3f3f3"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_task_item_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="13sp"
                android:visibility="gone"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tv_test_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_task_failure_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/shape_f3f3f3_corner_bottom_10"
            android:paddingHorizontal="15dp"
            android:paddingBottom="15dp">

            <com.itheima.roundedimageview.RoundedImageView
                android:id="@+id/iv_task_failure_img_1"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:riv_corner_radius="5dp"/>

            <com.itheima.roundedimageview.RoundedImageView
                android:id="@+id/iv_task_failure_img_2"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:riv_corner_radius="5dp"
                android:layout_marginLeft="5dp"/>

            <com.itheima.roundedimageview.RoundedImageView
                android:id="@+id/iv_task_failure_img_3"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:riv_corner_radius="5dp"
                android:layout_marginLeft="5dp"/>

            <com.itheima.roundedimageview.RoundedImageView
                android:id="@+id/iv_task_failure_img_4"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:riv_corner_radius="5dp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_no_salve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_ffffff_corner_10"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_task_solve"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:background="@drawable/shape_cccccc_corner_10_line"
            android:gravity="top|start"
            android:hint="请输入..."
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/ll_task_solve_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.itheima.roundedimageview.RoundedImageView
                    android:id="@+id/iv_task_solve_img_1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icon_image_add"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="5dp"/>

                <TextView
                    android:text="设备图"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.itheima.roundedimageview.RoundedImageView
                    android:id="@+id/iv_task_solve_img_2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icon_image_add"
                    android:layout_marginStart="10dp"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="5dp"/>

                <TextView
                    android:text="合影图"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.itheima.roundedimageview.RoundedImageView
                    android:id="@+id/iv_task_solve_img_3"
                    android:layout_width="70dp"
                    android:src="@drawable/icon_image_add"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="5dp"/>

                <TextView
                    android:text="关键位置图"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.itheima.roundedimageview.RoundedImageView
                    android:id="@+id/iv_task_solve_img_4"
                    android:layout_width="70dp"
                    android:src="@drawable/icon_image_add"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="5dp"/>

                <TextView
                    android:text="其他图"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/btn_task_solve"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/shape_d7a64a_corner_10"
                android:gravity="center"
                android:text="确认完成"
                android:textColor="@color/color_FFFFFF"
                android:textSize="13sp"
                android:layout_weight="1"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>