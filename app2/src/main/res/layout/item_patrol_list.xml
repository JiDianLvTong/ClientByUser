<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/shape_ffffff_corner_10"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_cccccc_corner_5">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_image_broken"
                android:adjustViewBounds="true"/>

            <com.itheima.roundedimageview.RoundedImageView
                android:id="@+id/iv_patrol_item_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:riv_corner_radius="5dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_patrol_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_patrol_item_status"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="在线"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_patrol_item_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="编号:" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_patrol_item_address"
                            android:layout_width="wrap_content"
                            android:textSize="9sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="#333333"
                            android:ellipsize="end"
                            android:text="地址:" />

                        <TextView
                            android:id="@+id/tv_patrol_item_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="9sp"
                            android:layout_marginTop="5dp"
                            android:ellipsize="end"
                            android:textColor="#333333"
                            android:maxLines="1"
                            android:text="距离:" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/tv_patrol_item_guiide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingLeft="15dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/main_map"
                            android:adjustViewBounds="true"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/t_1"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="巡检"
            android:gravity="center"
            android:background="@drawable/shape_d7a64a_corner_5"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/t_2"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="故障上报"
            android:gravity="center"
            android:background="@drawable/shape_d7a64a_corner_5"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>