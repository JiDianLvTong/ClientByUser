<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F6F6F6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_ffffff_corner_5"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_msg_system_look"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_item_msg_system"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="11.5dp"
        android:src="@drawable/icon_system_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/point_item_msg_system"
        android:layout_width="6.5dp"
        android:layout_height="6.5dp"
        android:background="@drawable/shape_oval_ee4923"
        app:layout_constraintEnd_toEndOf="@id/iv_item_msg_system"
        app:layout_constraintTop_toTopOf="@id/iv_item_msg_system" />

    <TextView
        android:id="@+id/tv_item_msg_system_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:textColor="@color/color_999999"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_msg_system"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_item_msg_system"
        tools:text="2020-12-25" />

    <TextView
        android:id="@+id/tv_item_msg_system_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7.5dp"
        android:drawablePadding="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="10dp"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_msg_system"
        app:layout_constraintEnd_toStartOf="@id/tv_item_msg_system_time"
        app:layout_constraintStart_toEndOf="@id/iv_item_msg_system"
        app:layout_constraintTop_toTopOf="@id/iv_item_msg_system"
        tools:text="关于今晚预警的通知 " />

    <TextView
        android:id="@+id/tv_item_msg_system_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="27dp"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/color_666666"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_item_msg_system"
        tools:text="您的换电次数即将消耗完，请及时联系商家重新购买，以免影响到您的换电......" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="14.5dp"
        android:layout_marginEnd="31dp"
        android:background="@color/color_EEEEEE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_msg_system_content" />

    <TextView
        android:id="@+id/tv_item_msg_system_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="15.5dp"
        android:paddingTop="13dp"
        android:paddingBottom="16dp"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_msg_system_content"
        tools:text="查看详情" />

    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginEnd="29dp"
        android:src="@drawable/pub_page_right_arrow_black"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_msg_system_look"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_item_msg_system_look" />

    <TextView
        android:id="@+id/line_item_msg_system"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_item_msg_system_look" />
</androidx.constraintlayout.widget.ConstraintLayout>