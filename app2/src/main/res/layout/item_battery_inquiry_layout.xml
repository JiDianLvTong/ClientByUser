<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_battery_inquiry_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="11.5dp"
        android:layout_marginEnd="11.5dp"
        android:background="@drawable/shape_ffffff_corner_10"
        android:lineSpacingExtra="5dp"
        android:paddingStart="15dp"
        android:paddingTop="13dp"
        android:paddingEnd="11dp"
        android:paddingBottom="13dp"
        android:text="所在电柜：\n电池编号：\n当前绑定用户：\n时间："
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/line_item_battery_inquiry"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/transparent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_battery_inquiry_name" />

    <include
        android:id="@+id/li_item_list_foot"
        layout="@layout/common_item_list_foot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/line_item_battery_inquiry" />
</androidx.constraintlayout.widget.ConstraintLayout>