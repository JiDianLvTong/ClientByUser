<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_1b1b1b"
    tools:context=".mvp.task.TimeTaskDetailActivity">

    <include
        android:id="@+id/title_layout"
        layout="@layout/base_title_layout" />

    <LinearLayout
        android:id="@+id/ll_task_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/shape_ffffff_corner_10"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_task_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_de0b15_corner_20"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="电柜故障"
                android:textColor="@color/color_FFFFFF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_task_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="编号：123123123123"
                android:textColor="@color/color_000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_task_item_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_b0815a_corner_20"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="导航路线"
                android:textColor="@color/color_FFFFFF"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_task_item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:textColor="@color/color_000000"
            android:textSize="17sp"
            android:visibility="gone"
            tools:text="地址" />

        <TextView
            android:id="@+id/tv_test_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:text="地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址"
            android:textColor="@color/color_000000"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/ll_task_failure_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_task_failure_img_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_task_failure_img_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_task_failure_img_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_task_failure_img_4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_no_salve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_ffffff_corner_10"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/ll_task_top"
        tools:layout_editor_absoluteX="10dp">

        <EditText
            android:id="@+id/et_task_solve"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_cccccc_corner_10_line"
            android:gravity="top|start"
            android:hint="请输入..."
            android:padding="10dp"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/ll_task_solve_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_task_solve_img_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/icon_image_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_task_solve_img_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/icon_image_add"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_task_solve_img_3"
                android:layout_width="70dp"
                android:src="@drawable/icon_image_add"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_task_solve_img_4"
                android:layout_width="70dp"
                android:src="@drawable/icon_image_add"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/btn_task_solve"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_64b22a_corner_20"
                android:gravity="center"
                android:text="确认完成"
                android:textColor="@color/color_FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btn_task_cant_solve"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/shape_de0b15_corner_20"
                android:gravity="center"
                android:text="无法完成"
                android:textColor="@color/color_FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_has_salve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_ffffff_corner_10"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_task_top"
        tools:layout_editor_absoluteX="10dp">

        <TextView
            android:id="@+id/tv_task_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/color_000000"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/ll_task_has_solve_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_task_has_solve_img_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_task_has_solve_img_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_task_has_solve_img_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_task_has_solve_img_4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>