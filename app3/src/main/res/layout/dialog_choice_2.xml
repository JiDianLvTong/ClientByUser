<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:background="@drawable/shape_white_ffffff_top_5">

        <ImageView
            android:src="@drawable/pub_dialog_question"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"/>


        <TextView
            android:id="@+id/title"
            android:textColor="#666666"
            android:textSize="15dp"
            android:text="是否要退出登录"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"/>


        <TextView
            android:id="@+id/content"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈adsdad 撒发射点发adasdasasdsd射点阿大撒大撒十分大方"
            android:textColor="#666666"
            android:textSize="11dp"/>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/enterView"
            android:textColor="#ffffff"
            android:textSize="11dp"
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:gravity="center"
            android:background="@drawable/shape_orange_b69873_bottom_left_5"/>

        <ImageView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="#ffffff"/>

        <TextView
            android:id="@+id/cancelView"
            android:textColor="#ffffff"
            android:textSize="11dp"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:background="@drawable/shape_grey_999999_bottom_right_5"/>

    </LinearLayout>

</LinearLayout>