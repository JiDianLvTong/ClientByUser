<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey_1b1b1b">

    <com.android.jidian.extension.view.commonPlug.immersionStatusBar.StatusBarView
        android:id="@+id/statusBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/pageReturn"
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/pub_page_left_arrow_white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="个人信息"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/editPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@drawable/shape_white_ffffff_5"
            android:layout_margin="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="5dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="真实姓名："
                    android:textSize="13dp"
                    android:textColor="#333333"/>

                <EditText
                    android:id="@+id/t_1"
                    android:hint="请填写您的真实姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColorHint="#cccccc"
                    android:textColor="#333333"
                    android:textSize="11dp"
                    android:layout_marginLeft="10dp"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/shape_cccccc_tran_conner_5"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:paddingVertical="5dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="证件号码："
                    android:textSize="13dp"
                    android:textColor="#333333"/>

                <EditText
                    android:id="@+id/t_2"
                    android:hint="请填写您的证件号码"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColorHint="#cccccc"
                    android:textColor="#333333"
                    android:textSize="11dp"
                    android:layout_marginLeft="10dp"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/shape_cccccc_tran_conner_5"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:paddingVertical="5dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="支付宝账号："
                    android:textSize="13dp"
                    android:textColor="#333333"/>

                <EditText
                    android:id="@+id/t_3"
                    android:hint="请填写您的支付宝账号"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColorHint="#cccccc"
                    android:textColor="#333333"
                    android:textSize="11dp"
                    android:layout_marginLeft="10dp"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/shape_cccccc_tran_conner_5"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/l_1_add"
                    android:layout_width="1px"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/shape_grey_cccccc_10"
                        android:gravity="center"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:src="@drawable/user_info_id_front"
                            android:adjustViewBounds="true"/>

                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="身份证正面照片"
                            android:gravity="center"
                            android:textSize="11dp"
                            android:textColor="#ffffff"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/l_1_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"/>

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/l_2_add"
                    android:layout_width="1px"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/shape_grey_cccccc_10"
                        android:gravity="center"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:src="@drawable/user_info_id_back"
                            android:adjustViewBounds="true"/>

                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="身份证反面照片"
                            android:gravity="center"
                            android:textSize="11dp"
                            android:textColor="#ffffff"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/l_2_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"/>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/infoSubmit"
            android:background="@drawable/shape_orange_b69873_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:text="提交审核"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/infoPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@drawable/shape_white_ffffff_5"
            android:layout_margin="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核状态："
                    android:textSize="15dp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:paddingVertical="10dp"/>

                <TextView
                    android:id="@+id/i_t_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核状态："
                    android:textSize="15dp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:paddingVertical="10dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/intoEdit"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/pub_edit"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="真实姓名："
                    android:textSize="13dp"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/i_t_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#999999"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="证件号码："
                    android:textSize="13dp"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/i_t_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#999999"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="支付宝账号："
                    android:textSize="13dp"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/i_t_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#999999"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/i_l_1_image"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>


                <ImageView
                    android:id="@+id/i_l_2_image"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>