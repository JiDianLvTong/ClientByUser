<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_item_invite_detail_index"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        tools:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_item_invite_detail_phone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="46dp"
        android:textSize="14sp"
        android:textColor="@color/color_333333"
        tools:text="11111123124"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_item_invite_detail_time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="14sp"
        android:textColor="@color/color_333333"
        tools:text="2020.20.20 20:20:20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:background="@color/color_EEEEEE"
        app:layout_constraintTop_toBottomOf="@id/tv_item_invite_detail_phone"
        app:layout_constraintStart_toStartOf="@id/tv_item_invite_detail_phone"
        app:layout_constraintEnd_toEndOf="@id/tv_item_invite_detail_time"
        android:layout_width="0dp"
        android:layout_height="0.5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>