<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tv_order_confirm_type_one"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/i_1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/zf1" />

        <TextView
            android:id="@+id/t_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_weight="1"
            android:text="支付宝支付"
            android:textColor="@color/color_555555"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/i_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/zf3" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="11.5dp"
        android:layout_marginEnd="11.5dp"
        android:background="@color/color_EEEEEE" />

    <LinearLayout
        android:id="@+id/tv_order_confirm_more_type"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="更多支付支付方式"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="57dp" />

        <TextView
            android:background="@drawable/icon_arrow_down"
            android:layout_width="10dp"
            android:layout_height="10dp" />

    </LinearLayout>

</LinearLayout>