<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/page_return"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="16.5dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/page_close" />
    </LinearLayout>

    <ImageView
        android:id="@+id/top_image1"
        android:layout_width="164dp"
        android:layout_height="78dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="9dp"
        android:src="@drawable/login_logo" />


    <LinearLayout
        android:id="@+id/login_lin1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="37.5dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="37.5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="13dp"
            android:layout_marginStart="14dp"
            android:background="@color/color_CCCCCC" />

        <EditText
            android:id="@+id/login_phone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="19dp"
            android:background="@null"
            android:gravity="left|center"
            android:hint="请输入手机号"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/color_666666"
            android:textColorHint="@color/color_CCCCCC"
            android:textCursorDrawable="@drawable/shape_color_edt_cursor"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:background="@color/color_CCCCCC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="37.5dp"
        android:layout_marginTop="14.5dp"
        android:layout_marginEnd="37.5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_number"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left|center"
            android:hint="请输入验证码"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/color_666666"
            android:textColorHint="@color/color_CCCCCC"
            android:textCursorDrawable="@drawable/shape_color_edt_cursor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/get_number_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/color_2ba245"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:background="@color/color_CCCCCC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/login_read"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_disclaimer_agreement_uncheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5.5dp"
            android:text="我已阅读并同意"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rule1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login1"
            android:textColor="@color/color_2ba245"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rule2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login2"
            android:textColor="@color/color_2ba245"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="新用户登录自动创建账户"
        android:textColor="@color/color_999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15.5dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_2ba245_r10"
        android:gravity="center"
        android:text="登 录"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/btn_JVerificationLogin"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15.5dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_2ba245_r10"
        android:gravity="center"
        android:text="一键登录"
        android:textColor="@color/white"
        android:textSize="17sp" />
</LinearLayout>