<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ela_rv_a_item_circlrImageView"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:civ_border_width="0dp"
        tools:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ela_rv_a_item_textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="12sp"
                tools:text="188****3987" />

            <TextView
                android:id="@+id/ela_rv_a_item_textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#999999"
                android:textSize="11sp"
                tools:ignore="SmallSp"
                tools:text="2分钟前" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score"
                android:textColor="#666666"
                android:textSize="11sp"
                tools:ignore="SmallSp" />

            <ImageView
                android:id="@+id/ela_rv_a_item_imageView1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/gray_stars"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/ela_rv_a_item_imageView2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="7dp"
                android:src="@mipmap/gray_stars"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/ela_rv_a_item_imageView3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="7dp"
                android:src="@mipmap/gray_stars"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/ela_rv_a_item_imageView4"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="7dp"
                android:src="@mipmap/gray_stars"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/ela_rv_a_item_imageView5"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="7dp"
                android:src="@mipmap/gray_stars"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/evaluation_label"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/ela_rv_a_item_textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="#888888"
                android:textSize="11sp"
                tools:ignore="SmallSp"
                tools:text="换电快，电量少，换电便宜，电池少，换电便宜，换电快，电量少，换电便宜，电池少\n换电挺快的，电池很耐用吧啦吧啦吧电池很耐用吧啦吧啦吧电池很耐用吧啦吧啦吧电池很耐用吧" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>