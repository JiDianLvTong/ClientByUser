<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/btn_open_GaoDe_map"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="高德地图"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/line_open_GaoDe_map"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_EEEEEE"
            app:layout_constraintTop_toBottomOf="@id/btn_open_GaoDe_map" />

        <TextView
            android:id="@+id/btn_open_Baidu_map"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="百度地图"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/line_open_GaoDe_map" />

        <TextView
            android:id="@+id/line_open_Baidu_map"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_EEEEEE"
            app:layout_constraintTop_toBottomOf="@id/btn_open_Baidu_map" />

        <TextView
            android:id="@+id/btn_open_tencent_map"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="腾讯地图"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/line_open_Baidu_map" />

        <TextView
            android:id="@+id/line_open_tencent_map"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_EEEEEE"
            app:layout_constraintTop_toBottomOf="@id/btn_open_tencent_map" />

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_999999"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/line_open_tencent_map" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>