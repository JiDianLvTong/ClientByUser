<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/alertdialog_style"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alertDialogTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="25dp"
                android:paddingRight="15dp"
                android:paddingBottom="25dp"
                android:textColor="#333333"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/alert_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:digits="1234567890"
                android:maxLength="8"
                android:gravity="center"
                android:hint="请输入兑换次数" />


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#cccccc" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/success"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_left_bottom_corners_radius_10"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="确定"
                    android:textColor="#2ba245"
                    android:textSize="13dp"></TextView>

                <ImageView
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="#cccccc" />

                <TextView
                    android:id="@+id/error"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_right_bottom_corners_radius_10"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="取消"
                    android:textColor="#2ba245"
                    android:textSize="13dp"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>